<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.okstudy.shop.domain.category.CategoryDAO">

    <sql id="category_sql">
        SELECT * FROM SH_CATEGORY_TB

    </sql>

    <select id="list" resultType="Category">
        <include refid="category_sql"></include>
        WHERE STATUS = "NORMAL"
        ORDER BY ORDER_NO
    </select>

    <select id="findOne" resultType="Category">
      <include refid="category_sql"></include>
        WHERE STATUS = "NORMAL" AND CATEGORY_IDX = #{categoryIdx}
    </select>
</mapper>